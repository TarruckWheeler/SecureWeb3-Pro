{
  "name": "secureweb3-pro",
  "version": "2.0.0",
  "description": "Advanced Web3 Security Platform with Research-Grade Blockchain Protection Tools",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=8080 --open=/",
    "build": "npm run minify && npm run optimize",
    "minify": "html-minifier --collapse-whitespace --remove-comments --minify-css --minify-js index.html -o dist/index.html",
    "optimize": "imagemin assets/images/* --out-dir=dist/assets/images/",
    "test": "npm run test:unit && npm run test:integration && npm run test:security",
    "test:unit": "jest tests/unit/",
    "test:integration": "jest tests/integration/",
    "test:security": "npm run security:audit && npm run security:scan",
    "test:accessibility": "axe-cli http://localhost:8080",
    "test:performance": "lighthouse http://localhost:8080 --output=json --output-path=./reports/lighthouse.json",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint assets/js/ && stylelint assets/css/",
    "lint:fix": "eslint assets/js/ --fix && stylelint assets/css/ --fix",
    "security:audit": "npm audit --audit-level moderate",
    "security:scan": "snyk test",
    "security:check": "npm run security:audit && npm run security:scan",
    "security:pentest": "zap-baseline.py -t http://localhost:8080",
    "deploy:netlify": "netlify deploy --prod --dir=dist",
    "deploy:vercel": "vercel deploy --prod",
    "deploy:github": "gh-pages -d dist",
    "validate:html": "html-validate index.html",
    "validate:css": "css-validator assets/css/",
    "validate:accessibility": "pa11y http://localhost:8080",
    "docs:generate": "jsdoc assets/js/ -d docs/api/",
    "docs:serve": "docsify serve docs/",
    "format": "prettier --write \"**/*.{js,css,html,md}\"",
    "precommit": "npm run lint && npm run test:unit && npm run security:check",
    "prepush": "npm run test && npm run build",
    "release": "standard-version",
    "start": "npm run dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TarruckWheeler/SecureWeb3-Pro.git"
  },
  "keywords": [
    "web3",
    "blockchain",
    "security",
    "cybersecurity",
    "cryptocurrency",
    "smart-contracts",
    "defi",
    "nft",
    "wallet",
    "ethereum",
    "bitcoin",
    "password-generator",
    "phishing-detection",
    "gas-estimation",
    "research",
    "stanford",
    "accessibility",
    "privacy",
    "encryption"
  ],
  "author": {
    "name": "Tarruck Wheeler",
    "email": "tarruck@stanford.edu",
    "url": "https://tarruck.netlify.app/",
    "affiliation": "Stanford University"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TarruckWheeler/SecureWeb3-Pro/issues",
    "email": "tarruck@stanford.edu"
  },
  "homepage": "https://secureweb3-pro.netlify.app/",
  "funding": {
    "type": "research",
    "url": "https://stanford.edu/research"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "devDependencies": {
    "@axe-core/cli": "^4.8.2",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-security": "^1.7.1",
    "html-minifier": "^4.0.0",
    "html-validate": "^8.7.4",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "lighthouse": "^11.4.0",
    "live-server": "^1.2.2",
    "pa11y": "^8.0.0",
    "prettier": "^3.1.1",
    "snyk": "^1.1277.0",
    "standard-version": "^9.5.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0"
  },
  "dependencies": {},
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "assets/js/**/*.js",
      "!assets/js/vendor/**",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "plugin:security/recommended"
    ],
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "rules": {
      "security/detect-object-injection": "error",
      "security/detect-non-literal-regexp": "error",
      "security/detect-unsafe-regex": "error",
      "security/detect-buffer-noassert": "error",
      "security/detect-child-process": "error",
      "security/detect-disable-mustache-escape": "error",
      "security/detect-eval-with-expression": "error",
      "security/detect-no-csrf-before-method-override": "error",
      "security/detect-non-literal-fs-filename": "error",
      "security/detect-non-literal-require": "error",
      "security/detect-possible-timing-attacks": "error",
      "security/detect-pseudoRandomBytes": "error"
    }
  },
  "stylelint": {
    "extends": ["stylelint-config-standard"],
    "rules": {
      "declaration-empty-line-before": null,
      "declaration-block-single-line-max-declarations": 3,
      "selector-class-pattern": "^[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "standard-version": {
    "types": [
      {"type": "feat", "section": "Features"},
      {"type": "fix", "section": "Bug Fixes"},
      {"type": "security", "section": "Security"},
      {"type": "perf", "section": "Performance"},
      {"type": "docs", "section": "Documentation"},
      {"type": "style", "hidden": true},
      {"type": "refactor", "hidden": true},
      {"type": "test", "hidden": true},
      {"type": "chore", "hidden": true}
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "pre-push": "npm run prepush"
    }
  }
}
